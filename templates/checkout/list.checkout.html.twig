{% extends 'admin/_base_admin.html.twig' %}
{% set menu_section = true %}
{% block title %}Etudiant{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20">Liste des étudiants</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        
                        <a href="{{ path('app_checkout',{"classe":classe.id}) }}" class="btn btn-primary">Retour</a>
                        
                    </div>
                    
                </div>
                <table id="dataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Photo</th>
                       
                        
                        
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Photo</th>
                        
                    </tr>
                    </tfoot>
                    <tbody>
                                        {% for student in students %}
                        <tr>
                            <td>{{ student.user.nom }}</td>
                            <td>{{ student.user.prenom }}</td>
                            <td>
                                <img src="{{ asset('/uploads/phototechzara/'~student.user.photo) }}"
                                     class="w-3r h-3r bdrs-50p" alt="">
                            </td>
                            <td>
                            {{ student.status }}
                               
                            </td>
                            
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}