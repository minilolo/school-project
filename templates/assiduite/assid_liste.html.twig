{% extends 'admin/_base_admin.html.twig' %}
{% set menu_section = true %}
{% block title %}Ässiduité Liste{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20">Liste des presences</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('assiduite') }}" class="btn btn-primary">Nouveau</a>
                    </div>
                </div>
                    
                
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Matricule</th> 
                        <th>Status</th>   
                        <th>date</th> 
                        
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Matricule</th> 
                        <th>Status</th>   
                        <th>date</th> 
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for pre in presence %}
                        <tr>
                            <td>{{ pre.getUser().getNom() }} {{ pre.getUser().getPrenom() }}</td>
                            <td>{{ pre.getUser().getImatriculation() }}</td>
                            <td>{{ pre.getStatus }}</td>
                            <td>{{ pre.getDate().format('Y-m-d') }}</td>
                            
                            
                            
                        </tr>
                    {% endfor %}

                    
                    </tbody>
                </table>
                
            </div>
           
            
        </div>
    </div>
{% endblock %}