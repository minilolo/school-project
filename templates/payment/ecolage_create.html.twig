{% extends 'admin/_base_admin.html.twig' %}

{% block title %}Ecolage{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="bd mb-1 bgc-white p-20 sk-bd">
                            <h6>Ecolage</h6>
                            
                            
                            
                            <p>Montant</p>
                            {{ form_widget(form.montant) }}
                        </div>
                        
                    </div>
                    <div class="col-md-6">
                        <div class="bd mb-1 bgc-white p-20 sk-bd">
                            <h6>Les dates</h6>
                            {{ form_row(form.date_payment) }}
                            
                            
                            
                        </div>
                        
                    </div>
                </div>
                <div class="col-md-12 d-block mt-2 text-center">
                    <button type="submit" class="btn btn-lg btn-primary">
                        <i class="ti-save"></i> &nbsp;Enregistrer
                    </button>
                </div>

                <div >
                    {{ form_row(form.User) }}
                </div>
                {{ form_end(form,{render_rest: false}) }}
            </div>
        </div>
    </div>
{% endblock %}
